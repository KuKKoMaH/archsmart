.projects
  &__filter
    display: flex;
    align-self flex-start
    padding: 27px 20px 26px
    max-width 1480px
    margin: 0 auto
    +media('md')
      flex-direction column
      align-items center
      padding: 34px 20px 26px

    &-title
      padding-top: 5px
      font-weight: 500
      margin-right: 42px
      +media('md')
        margin-right: 0
        margin-bottom: 14px
        padding-top: 0

  &__items
    display: flex;
    flex-wrap wrap

  &__item
    position: relative;
    height: 300px
    background-size: cover
    background-position: 50% 50%
    color: #ffffff
    overflow: hidden;

    &:before, &:after
      content ''
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%

    &:before
      background: #191919
      opacity: .8

    &:after
      background: #e33535
      opacity: 0
      anim(.2s)

    @media screen and (min-width: 1351px)
      width: 25%
      &:nth-child(8n + 2),
      &:nth-child(8n + 4),
      &:nth-child(8n + 5),
      &:nth-child(8n + 7)
        color: #191919

        &:before
          background: linear-gradient(to top, #fff, rgba(#fff, .9))
          opacity: .8

    @media screen and (min-width: 1001px) and (max-width: 1350px)
      width: 33.3333%
      &:nth-child(6n + 2),
      &:nth-child(6n + 4),
      &:nth-child(6n + 6)
        color: #191919

        &:before
          background: linear-gradient(to top, #fff, rgba(#fff, .9))
          opacity: .8
    @media screen and (min-width: 661px) and (max-width: 1000px)
      width: 50%
      &:nth-child(4n + 2),
      &:nth-child(4n + 3)
        color: #191919

        &:before
          background: linear-gradient(to top, #fff, rgba(#fff, .9))
          opacity: .8

    @media screen and (max-width: 660px)
      width: 100%
      height: 185px
      &:nth-child(2n )
        color: #191919

        &:before
          background: linear-gradient(to top, #fff, rgba(#fff, .9))
          opacity: .8

    &:hover
      &:after
        opacity: 1

      & ^[0]__title
        color: #ffffff
        bottom: 70px
        @media screen and (max-width: 660px)
          bottom: 50px

      & ^[0]__address
        color: #ffffff
        @media screen and (max-width: 660px)
          top: 10px

        svg
          fill: #ffffff

      & ^[0]__more
        bottom: 30px
        @media screen and (max-width: 660px)
          bottom: 20px

  &__content
    position: relative;
    height: 100%
    width: 300px
    margin: 0 auto
    padding-top: 20px
    z-index: 1
    @media screen and (max-width: 660px)
      width: 240px

  &__address
    position: absolute;
    top: 44px
    left: 0
    font-size: 13px
    font-weight: normal
    padding-left: 24px
    white-space nowrap
    overflow: hidden;
    text-overflow ellipsis
    width: 100%
    anim(.2s)
    @media screen and (max-width: 660px)
      font-size: 10px
      top: 27px
      padding-left: 20px

    svg
      position: absolute;
      width: 14px
      height: 14px
      fill #e33535
      left: -2px;
      top: 4px;
      anim(.2s)
      @media screen and (max-width: 660px)
        width: 13px
        height: 13px
        top: 3px

  &__title
    position: absolute;
    bottom: 41px
    font-size: 18px
    font-weight: normal;
    letter-spacing 0
    anim(.2s)
    @media screen and (max-width: 660px)
      font-size: 14px
      bottom: 23px

  &__more
    position: absolute;
    font-weight: 500
    letter-spacing .2em
    color: #ffffff
    padding-left: 3px
    bottom: -30px
    anim(.2s)

    svg
      position: absolute;
      width: 23px
      height: 23px
      left: 150px;
      top: 2px;
      fill: #ffffff
