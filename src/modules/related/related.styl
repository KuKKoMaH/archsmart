.related
  margin-bottom: 135px
  +media('md')
    margin-bottom: 24px

  &__title
    text-align: center;
    font-size: 36px
    font-weight: 500
    margin-bottom: 55px
    +media('md')
      font-size: 22px
      margin-bottom: 50px

    &:after
      content: ''
      display: block;
      width: 100px
      height: 2px
      background: #e23535
      margin: 6px auto 0
      +media('md')
        width: 60px
        margin-top: 4px
        height: 1px

  &__items
    display: flex;
    justify-content center
    margin: 0 -15px
    flex-wrap wrap
    +media('md')
      margin: 0

  &__item
    width: 33.3333%
    padding: 15px
    +media('lg')
      width: 50%
    +media('md')
      width: 100%
      padding: 0 20px 26px

  &__card
    display: block;
    color: #191919
    border: 0
    box-shadow 0 13px 106px rgba(#191919, .1)

    &:hover
      color: #191919
      & ^[0]__more
        background: #e23535
        border-color: #e23535

        span
          color: #ffffff
          flex: 1

        svg
          margin-left: auto;
          fill #fff

  &__inner
    position: relative;
    background: #fff

  &__image
    height: 220px
    background-size: cover
    background-position: 50% 50%
    +media('md')
      height: 166px

  &__body
    padding: 37px 30px 37px 48px
    min-height 205px
    +media('md')
      padding: 24px 30px 24px 39px
      min-height auto

  &__address
    position: relative;
    font-size: 13px
    margin-bottom: 22px
    padding-left: 26px
    +media('md')
      font-size: 10px
      margin-bottom: 17px

    svg
      position: absolute;
      width: 14px
      height: 14px
      fill #e23535
      left: 0
      top: 3px

  &__name
    font-size: 18px
    font-weight: normal;
    letter-spacing 0
    +media('md')
      font-size: 14px

  &__more
    border-top: 1px solid #efefef
    padding: 23px 48px 24px
    font-size: 13px
    font-weight: 500
    letter-spacing .2em
    display: flex;
    align-items center
    anim(.2s)
    +media('md')
      font-size: 12px
      padding: 15px 39px 14px

    span
      flex: 0
      anim(.2s)

    svg
      width: 19px
      height: 19px
      fill #e23535
      vertical-align: middle;
      margin-left: 11px
      anim(.2s)
