.slide
  height: 95vh
  max-height 950px
  position: relative;
  +media('md')
    height: auto;

  &__slider
    background-color: #191919;
    height: 100%

  &__items
    display: flex;
    height: 100%

  &__item
    flex-shrink 0
    height: 100%
    width: 100%
    position: relative;

  //background: #191919

  &__background
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%;
    opacity: 0
    anim(.2s)

    &.swiper-lazy-loaded
      opacity: 1

    &:after
      content: ''
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      opacity: .85
      background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAYUAAAABCAYAAAAxdbIyAAAAG0lEQVR4AWP4//8/r3uBD8MoHsWjeBSP4lEMACv3i6ZFyGkgAAAAAElFTkSuQmCC') 50% 50%, linear-gradient(49deg, #191919, rgba(#191919, 0.85), #191919)

  &__content
    position: relative
    z-index: 1;
    height: 100%

    .c
      height: 100%
      display: flex;
      flex-direction column
      justify-content center
      padding-left: 70px
      align-items flex-start
      +media('lg')
        padding-left: 0
      +media('md')
        padding: 79px 20px 150px

  &__label
    font-size: 11px
    background: #ffffff
    letter-spacing .2em
    padding: 2px 7px 3px
    margin-bottom: 23px
    +media('md')
      font-size: 8px
      padding: 0px 4px
      margin-bottom: 18px

  &__title
    position: relative;
    color: #ffffff
    font-size: 66px
    line-height: 1.2
    font-weight: 800
    max-width 900px
    word-break: break-word;
    +media('lg')
      font-size: 40px
    +media('md')
      font-size: 28px
      padding-left: 40px

    &:before
      content: ''
      position: absolute;
      top: 0px
      bottom: 0px
      width: 1px
      background: #e33535
      left: -70px
      +media('md')
        left: 0px

  &__text
    font-size: 18px
    color: #ffffff
    margin-top: 45px
    max-width 700px
    +media('lg')
      font-size: 15px
      max-width 600px
    +media('md')
      font-size: 12px
      margin-top: 22px

  &__link
    color: #ffffff
    margin-top: 65px
    +media('md')
      margin-top: 30px

  &__nav
    position: absolute;
    bottom: 240px
    left: 50%
    margin-left: 355px
    +media('lg')
      margin-left: 200px
    +media('md')
      bottom: 0
      margin-left: -70px

  &__video
    position: absolute;
    bottom: 120px
    left: 50%
    margin-left: 175px
    color: #ffffff
    z-index: 1
    border: 0
    +media('md')
      margin-left: -146px
      bottom: -38px
      font-size: 12px
      padding-left: 60px
      color: #191919

    &:hover
      color: #ffffff
      & ^[1]-icon
        &:before
          width: 80px
          height: 80px

        &:after
          width: 60px
          height: 60px

    &-icon
      display: inline-block;
      vertical-align: middle;
      position: relative;
      width: 40px
      height: 40px
      border-radius: 50%
      background: #e33535
      margin-right: 20px
      +media('md')
        position: absolute;
        top: -37px;
        left: 11px;

      &:before, &:after
        content: ''
        position: absolute;
        top: 50%
        left: 50%
        transform translate(-50%, -50%)
        border-radius: 50%
        background: #e33535
        z-index: -1
        anim()

      &:before
        width: 40px
        height: 40px
        opacity: .1

      &:after
        width: 50px
        height: 50px
        opacity: .25

      svg
        position: absolute;
        width: 12px
        height: 12px
        fill: #ffffff
        left: 50%
        top: 50%
        margin-left: 1px
        transform translate(-50%, -50%)
