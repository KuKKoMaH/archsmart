.info
  position: relative;
  padding: 87px 0 150px
  +media('md')
    padding: 15px 0 48px

  &__decor1
    position: absolute;
    top: -332px
    left: 50%
    margin-left: 720px
    width: 80px
    height: 240px

    &:after
      transform rotate(60deg)

  &__decor2
    position: absolute;
    right: 50%
    bottom: 0
    margin-right: 275px
    width: 310px
    height: 60px

    &:after
      transform rotate(-60deg)

  &__decor3
    position: absolute;
    top: 0
    left: 50%
    margin-left: 510px
    width: 75px
    height: 149px

    &:after
      transform rotate(60deg)

  &__decor4
    position: absolute;
    bottom: 0px;
    left: 50%;
    margin-left: 485px;
    width: 149px
    height: 75px

    &:after
      transform rotate(-30deg)

  // ======================================================

  &__block1
    display: flex;
    margin-bottom: 195px
    +media('md')
      flex-direction column
      align-items center
      margin-bottom: 52px

  &__item1
    width: 33.3333%
    text-align: center;
    padding: 0 10px
    +media('md')
      margin-bottom: 35px
      width: 100%

    &-icon
      height: 70px
      position: relative;
      margin-bottom: 11px
      +media('md')
        margin-bottom: 1px

      svg
        position: absolute;
        top: 50%
        left: 50%
        max-height 50px
        width: 100%
        transform translate(-50%, -50%)
        fill #e33535

    &-title
      font-size: 17px
      font-weight: 500
      max-width 230px
      margin: 0 auto 12px
      +media('md')
        font-size: 14px
        margin-bottom: 7px

    &-text
      max-width 230px
      margin: 0 auto

  // ======================================================

  &__block2
    position: relative;
    z-index: 2

    & .c
      min-height 634px
      display: flex;
      align-items center
      position: relative;
      z-index: 1
      +media('md')
        min-height 0

    &:before
      content: ''
      position: absolute;
      top: -50px
      bottom: -50px
      left: 0
      right: 50%
      margin-right: -215px
      background: #f7f7f7
      +media('md')
        right: 0
        margin-right: 0
        bottom: 0
        top: -43px

  &__title2
    position: absolute;
    font-size: 11px
    font-weight: normal;
    transform rotate(-90deg)
    letter-spacing .2em
    left: 2px;
    bottom: 89px;
    +media('md')
      font-size: 8px
      left: 2px;
      bottom: 89px;

    &:before
      content: ''
      position: absolute;
      width: 40px
      height: 1px
      background: #e33535
      right: 100%
      margin-right: 14px;
      top: 10px;
      +media('md')
        top: 7px
        width: 31px

  &__text2
    max-width 570px
    +media('lg')
      max-width 470px
    +media('md')
      max-width none
      padding: 0 20px

  &__img2
    position: absolute;
    left: 50%
    margin-left: 115px
    top: 50%
    transform translateY(-50%)
    height: 634px
    width: 685px
    background-size: cover
    background-position: 50% 50%
    +media('md')
      position: relative;
      transform translateY(41px)
      width: 270px
      height: 210px
      z-index: 1
      margin-left: 0
      left: 50px
      margin-top: -10px

  // ======================================================

  &__block3
    position: relative;
    height: 773px
    background-size: cover
    background-position: 50% 50%
    +media('md')
      height: auto;
      padding-bottom: 49px

    &:before
      content ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      opacity: .8
      background: linear-gradient(49deg, #191919, rgba(#191919, 0.85), #191919);

    .c
      position: relative;
      z-index: 1
      color: #ffffff
      display: flex;
      padding-top: 250px
      +media('md')
        flex-direction column
        padding-left: 50px
        padding-top: 91px

  &__item3
    width: 400px
    border-left: 1px solid #e33535
    padding: 57px 0 30px 50px
    +media('md')
      width: auto;
      padding: 31px 0 19px 35px
      margin-bottom: 50px

    &:last-child
      width: auto;

    &-title
      font-size: 70px
      line-height: 30px
      font-weight: bold;
      margin-bottom: 40px
      +media('md')
        font-size: 60px
        margin-bottom: 27px

    &-text
      +media('md')
        br
          display: none;

  // ======================================================

  &__block4
    position: relative;
    min-height 560px
    +media('md')
      min-height auto

    &:before
      content: ''
      position: absolute;
      top: -100px
      left: 0
      right: 50%
      margin-right: 300px
      background: #ffffff
      bottom: 0
      +media('md')
        top: 0px
        height: 300px

    .c
      padding-left: 570px
      +media('lg')
        padding-left: 280px
      +media('md')
        padding: 0 20px

  &__title4
    position: absolute;
    font-size: 11px
    font-weight: normal;
    transform rotate(-90deg)
    letter-spacing .2em
    left: -26px;
    top: 117px
    +media('md')
      font-size: 8px
      top: 100px;
      left: -35px;

    &:before
      content: ''
      position: absolute;
      width: 40px
      height: 1px
      background: #e33535
      right: 100%
      margin-right: 14px;
      top: 10px;
      +media('md')
        top: 7px
        width: 31px

  &__text4
    padding-bottom: 50px
    padding-top: 140px
    +media('md')
      padding: 0

    h2
      margin-bottom: 2.4em
      +media('md')
        margin-bottom: 1.2em

      &:after
        content: ''
        display: block;
        width: 150px
        height: 1px
        background: #e33535
        margin-top: 15px
        +media('md')
          margin-top: 8px
          width: 60px

  &__img4
    width: 470px
    height: 660px
    position: absolute;
    top: -100px
    right: 50%
    margin-right: 115px
    +media('md')
      position: relative
      width: 220px
      height: 300px
      margin-top: -50px
      margin-left: 50px
      top: 0
      right: auto;
      margin-bottom: 43px

  // ======================================================

  &__block5
    position: relative;

    & .c
      display: flex;
      align-items flex-start
      +media('md')
        flex-direction column
        align-items stretch

  &__advantages
    width: 700px
    padding: 138px 130px 0 100px
    +media('lg')
      width: 400px
      padding-left: 0
      padding-right: 20px
    +media('md')
      padding-top: 33px
      padding-right: 0
      width: 100%;
      margin-bottom: 51px

    &-title
      font-size: 25px
      font-weight: 500
      margin-bottom: 28px
      text-align: center;
      +media('md')
        font-size: 16px
        margin-bottom: 16px

    &-slider
      overflow: hidden;
      margin-bottom: 46px

    &-items
      display: flex;
      margin-bottom: 37px
      +media('md')
        margin-bottom: 18px

    &-item
      width: 100%
      flex-shrink 0
      text-align: center;
      +media('md')
        padding: 0 20px

    &-pagination
      display: flex;
      align-items center
      justify-content center

      & .swiper-pagination-bullet
        position: relative;
        display: block;
        width: 6px
        height: 6px
        border-radius: 50%
        background: #dddddd
        margin: 17px
        cursor: pointer;
        anim()

        &:before
          content: ''
          position: absolute;
          width: 30px
          height: 30px
          border: 2px solid #e33535
          border-radius: 50%
          top: 50%
          left: 50%
          transform translate(-50%, -50%)
          opacity: 0
          anim()

        &:hover
          &:before
            opacity: 1

        &.swiper-pagination-bullet-active
          background: #e33535

          &:before
            opacity: 1

  &__files
    width: 370px
    background: #f7f7f7
    padding: 70px 30px 39px 74px
    +media('md')
      width: auto;
      margin: 0 20px
      padding: 43px 30px 27px 55px

  &__file
    display: block;
    position: relative;
    padding-left: 54px
    margin-bottom: 36px
    +media('md')
      padding-left: 38px
      margin-bottom: 18px

    &:hover
      & ^[1]-name
        color: #e33535

    &-name
      anim()
      +media('md')
        font-size: 12px

    &-meta
      font-size: 13px
      opacity: .5
      +media('md')
        font-size: 10px

    svg
      position: absolute;
      height: 35px
      width: 35px
      fill: #e33535
      top: 9px
      left: 0
      +media('md')
        width: 27px
        height: 27px

  &__link
    text-align: center;
