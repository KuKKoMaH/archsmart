.footer
  background: #191919
  color: #ffffff
  padding-top: 92px
  +media('lg')
    padding-top: 40px
  +media('md')
    padding-top: 43px

  ul
    margin: 0
    list-style none


  &__top
    position: relative;
    display: flex;
    margin-bottom: 31px
    +media('lg')
      flex-direction column
      max-width: 370px
      margin: 0 auto
    +media('md')
      padding: 0 20px

  &__info
    width: 270px
    margin-right: 130px
    font-size: 13px
    line-height: 1.90
    opacity: .25
    +media('lg')
      text-align: center;
      margin: 0 auto 25px
      width: auto;
    +media('md')
      font-size: 10px
      line-height: 2
      margin-bottom: 34px

  &__main
    +media('lg')
      margin-bottom: 20px
      display: flex;

      .footer__block
        width: 50%
        margin-left: auto;

    +media('md')
      margin-bottom: 33px

  &__block
    position: absolute;
    width: 270px
    top: 0
    font-size: 13px
    +media('lg')
      width: auto;
      position: static;

    a
      color: #ffffff

    li
      margin-bottom: 4px
      +media('md')
        margin-bottom: 0

      a
        color: #fff
        border: 0
        opacity: .25
        anim()
        +media('md')
          font-size: 12px

        &:hover
          color: inherit;
          opacity: 1

    &--contacts
      right: 0px
      +media('md')
        margin-bottom: 9px

    &--menu
      right: 300px

  &__header
    border-bottom: 1px solid #303030
    padding-bottom: 32px
    margin-bottom: 33px
    font-size: 15px
    anim()
    +media('lg')
      padding-bottom: 10px;
      margin-bottom: 8px;
    +media('md')
      padding-top: 4px
      font-size: 12px

  &__menu
    li
      margin-bottom: 24px
      +media('md')
        margin-bottom: 7px

    a
      color: #ffffff
      font-weight: normal;
      border: 0
      anim()
      +media('md')
        font-size: 12px

      &:hover
        color: #e33535

  &__contact
    width: 470px
    +media('lg')
      width: 100%
      max-width 370px
      margin: 0 auto
    +media('md')
      padding: 0 20px

    &-header
      font-size: 17px
      font-weight: 500
      margin-bottom: 9px
      +media('md')
        font-size: 14px
        margin-bottom: 8px

    &-text
      opacity: .25
      margin-bottom: 17px
      +media('md')
        font-size: 12px
        margin-bottom: 14px

  &__form
    display: flex;
    width: 100%
    +media('lg')
      flex-direction column
      align-items center

    span
      display: block;
      flex: 1

  &__input
    display: block;
    width: 100%
    background: #ffffff
    border: 2px solid #fff
    padding: 15px 25px 14px
    color: #191919
    font-weight: normal;
    anim();
    +media('lg')
      width: 100%
      margin-bottom: 10px

    &.wpcf7-not-valid
      border-color: #e33535

  &__button
    background: #e33535
    margin-left: 10px
    font-size: 13px
    font-weight: 500
    letter-spacing .2em
    padding: 0 30px
    height: 60px
    anim()
    +media('lg')
      margin-left: 0

    &:hover
      background: #ce3232

  &__bottom
    margin-top: 100px
    border-top: 1px solid #303030;
    +media('lg')
      margin-top: 50px
    +media('md')
      font-size: 10px

    .c
      height: 69px
      display: flex;
      justify-content space-between
      align-items center
      +media('lg')
        flex-direction column
        height: auto;
        padding: 20px 0


  &__copyright
    opacity: .25

  &__politic
    text-decoration: underline;
    color: #ffffff
    border: 0

    &:hover
      color: inherit;
      text-decoration: none;
