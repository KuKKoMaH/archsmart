cf()
  &:after
    content: ''
    display: table
    clear: both

anim(duration = .1s)
  transition: all duration ease-in

media($condition)
  if $condition == 'lg'
    @media screen and (max-width: $breakpoint-lg - 1)
      {block}
  if $condition == 'md'
    @media screen and (max-width: $breakpoint-md - 1)
      {block}
